<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="in.deaap.genomen"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    
    <application 
    	android:icon="@drawable/icon" 
    	android:label="@string/app_name" >
    	
    	<activity android:name=".Splash"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="OptionChooser"
                  android:label="@string/app_name"
            		>
            <intent-filter>
                <action android:name="in.deaap.genomen.OPTIONCHOOSER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name= "DpiSliderActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Dialog.NoActionBar">
            <intent-filter>
                <action android:name="in.deaap.genomen.DPISLIDERACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="FindFilesActivity"
                  android:label="@string/app_name"
                  android:icon="@drawable/zip">
            <intent-filter>
                <action android:name="in.deaap.genomen.FINDFILESACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="in.deaap.genomen.assist.AboutUs"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Dialog">
            <intent-filter>
                <action android:name="in.deaap.genomen.assist.ABOUTUS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="in.deaap.genomen.assist.CustomSearchActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="in.deaap.genomen.assist.CUSTOMSEARCHACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="in.deaap.genomen.assist.AddSearchActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Dialog.NoActionBar">
            <intent-filter>
                <action android:name="in.deaap.genomen.assist.ADDSEARCHACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="in.deaap.genomen.assist.Prefs" 
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="in.deaap.genomen.PREFS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>
</manifest>